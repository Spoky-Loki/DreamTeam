<html>
<head>
  <title>Films</title>
</head>
<style type='text/css'>
    .table {
        font-family: 'Lucida Sans Unicode', 'Lucida Grande', Sans-Serif;
        font-size: 14px;
        width: 100%;
        text-align: left;
        border-collapse: collapse;
        background: #252F48;
        margin: 10px;
    }

    .table thead th {
        color: #EDB749;
        border-bottom: 1px solid #37B5A5;
        padding: 12px 17px;
    }

    .table thead tr th:last-child {
        border-bottom: none;
    }

    .table tbody td {
        color: #CAD4D6;
        border-bottom: 1px solid #37B5A5;
        border-right:  1px solid #37B5A5;
        padding: 7px 17px;
    }

    .table tbody tr td:last-child {
        border-right: none;
    }

    .table tbody tr td:hover td {
        text-decoration: underline;
    }
</style>

<table class='table'>
  <thead>
  <tr>
    <th>Rang</th>
    <th>Film name</th>
    <th>Full name</th>
    <th>Year</th>
    <th>Image</th>
    <th>The actors</th>
    <th>Rating</th>
    <th>Rating Count</th>
  </tr>
  </thead>
  <tbody>
  <% @films_information.each do |film| %>
    <tr>
      <th>
        <%= film.rank%>
      </th>
      <th>
        <%= film.title%>
      </th>
      <th>
        <%= film.title_full%>
      </th>
      <th>
        <%= film.year%>
      </th>
      <th>
        <img src='<%= film.image %>'
             width = '102'
             height = '160'
             alt = 'Picture of the film'>
      </th>
      <th>
        <%= film.crew%>
      </th>
      <th>
        <%= film.imDbRating%>
      </th>
      <th>
        <%= film.imDbRatingCount%>
      </th>
    </tr>
  <% end %>
  </tbody>
</table>
</html>