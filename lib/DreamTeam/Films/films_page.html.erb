<html>
<head>
  <title>Films</title>
</head>
<style type='text/css'>
    .table {
        font-family:Sans-Serif;
        font-size: 16px;
        width: 100%;
        text-align: center;
        border: none;
        background: #f1f0f0;
        margin: 10px;
    }

    .table thead th {
        color: #035749;
        border-bottom: 2px solid #207968;
        border-right: none;
        padding: 7px 17px;
    }

    .table tbody th {
        color: #207968;
        border-bottom: 2px solid #d7ded9;
        border-right: 2px solid #d7ded9;
        padding: 7px 17px;
    }

    .table tbody tr td:hover td {
        text-decoration: underline;
    }
</style>

<table class='table'>
  <thead>
  <tr>
    <th>Rang</th>
    <th>Film name</th>
    <th>Full name</th>
    <th>Year</th>
    <th>Image</th>
    <th>The actors</th>
    <th>Rating</th>
    <th>Rating Count</th>
  </tr>
  </thead>
  <tbody>
  <% @films_information.each do |film| %>
    <tr>
      <th>
        <%= film.rank%>
      </th>
      <th>
        <%= film.title%>
      </th>
      <th>
        <%= film.title_full%>
      </th>
      <th>
        <%= film.year%>
      </th>
      <th>
        <img src='<%= film.image %>'
             width = '102'
             height = '160'
             alt = 'Picture of the film'>
      </th>
      <th>
        <%= film.crew%>
      </th>
      <th>
        <%= film.imDbRating%>
      </th>
      <th>
        <%= film.imDbRatingCount%>
      </th>
    </tr>
  <% end %>
  </tbody>
</table>
</html>